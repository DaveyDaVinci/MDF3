<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xkcdcomicviewer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.xkcdcomicviewer.MainView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.xkcdcomicviewer.ComicView"
            android:label="@string/title_activity_comic_view" >
        </activity>
        <activity
            android:name="com.example.xkcdcomicviewer.FavoritesActivity"
            android:label="@string/title_activity_favorites" >
        </activity>

        <service android:name="connectionwork.URLService" >
        </service>

        <activity
            android:name="com.example.xkcdcomicviewer.WidgetActivity"
            android:label="@string/title_activity_widget" >
        </activity>
        
        <receiver
            android:name="com.example.xkcdcomicviewer.ComicWidgetProvider">
            
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            
            <meta-data 
                android:name="android.appwidget.provider"
                android:resource="@xml/comic_widget"/>
            
        </receiver>
    </application>

</manifest>
